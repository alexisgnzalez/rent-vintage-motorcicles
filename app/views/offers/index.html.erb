<div class="container ">
  <div class="row justify-content-around mt-3">
    <%= link_to 'Back', root_path, class: "btn btn-outline-secondary" %>
    <%= link_to 'New Motorcycle', new_offer_path, class: "btn btn-outline-success" %>
  </div>
  <h1 class="text-center mt-3 font-weight-bold">Available Motorcicles</h1>
  <div class="cards">
    <% @offers.each do |offer| %>
      <div class="card mb-3">
        <%= image_tag "category-chopper.jpg", class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-text"><%= offer.description %></h5>
          <p class="card-text"><%= link_to 'Details', offer_path(offer), class: "btn btn-outline-primary mt-1"%></p>
        </div>
      </div>
    <% end %>
  </div>
</div>