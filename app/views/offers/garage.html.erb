<h1>My Motorcicles</h1>
<% if @garage.empty? %>
  <h3>Looks like you don't any motorcycles buddy!</h3>
<% else %>
  <ul>
    <% @garage.each do |motorcycle| %>
      <li><%= motorcycle.description %> <%= link_to 'Details', offer_path(motorcycle) %></li>
    <% end %>
  </ul>
<% end %>

<%= link_to 'All Motorcycles', offers_path %>
<%= link_to 'Add', new_offer_path %>
